<Window x:Class="MVVMDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="AliceBlue">
        <TextBox Margin="10" Height="30" VerticalAlignment="Top" Text="{Binding Name}"></TextBox>
        <Button Height="30" Width="80" VerticalAlignment="Top" Margin="60" Command="{Binding SayHelloCmd}">Say Hello</Button>
        <TextBlock Height="30" Width="200" Background="LightBlue" Text="{Binding GreetWords}" FontSize="18"></TextBlock>
    </Grid>
</Window>
